{
  "name": "watch anime on kitsu",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "how do watch the videos",
  "homepage_url": "",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "https://kitsu.io/anime/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://kitsu.io/anime/*"
      ],
      "js": [
        "inject/wheretowatch.js"
      ]
    }
  ]
}